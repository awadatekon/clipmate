{
  "manifest_version": 3,
  "name": "ClipMate with XPath",
  "version": "0.1",
  "description": "XPath の設定をもとにウェブ上の情報をクリップボードにコピーするアプリです。",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs",
    "clipboardWrite",
    "scripting",
    "storage",
    "activeTab",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"
}